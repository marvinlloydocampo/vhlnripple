
<%= simple_form_for(@issue) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :client_name %>
    <div class="form-group string required issue_type_id">
      <label class="form-control-label string required" for="issue_issue_type_id">Issue Type <abbr title="required">*</abbr></label>
      <br>
      <%= f.collection_select :issue_type_id, IssueType.order(:name),:id,:name, include_blank: false %>
    </div>
    <div class="form-group string required issue_assigned_developer_id">
      <label class="form-control-label string required" for="issue_assigned_developer_id">Assigned Developer <abbr title="required">*</abbr></label>
      <br>
      <%= f.collection_select :assigned_developer_id, User.order(:fullname),:id,:fullname, include_blank: false %>
    </div>
    <div class="form-group string required issue_assigned_tester_id">
      <label class="form-control-label string required" for="issue_assigned_tester_id">Assigned Tester <abbr title="required">*</abbr></label>
      <br>
      <%= f.collection_select :assigned_tester_id, User.order(:fullname),:id,:fullname, include_blank: false %>
    </div>
    <%= f.input :cycle_count, input_html: { value: 1 }, readonly: true %>
    <%= f.input :days_per_cycle, input_html: { value: 1 }, readonly: true %>
    <%= f.date_field :release_date %>
    <div class="form-group string required issue_status_id">
      <label class="form-control-label string required" for="issue_status_id">Status <abbr title="required">*</abbr></label>
      <br>
      <%= f.collection_select :issue_type_id, Status.order(:id),:id,:name, include_blank: false %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
